{
  "compilerOptions": {
//    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES5", "ES6", "ES2015.Promise", "DOM", "ES2015.Collection"],
    "allowJs": true,
    "jsx": "react",
    "inlineSources": true,
    "sourceMap": true
  },
  "include": ["src/*"]
}
